<?xml version="1.0"?>
<!DOCTYPE logokeywords>

<logokeywords lang="it" ver="0.01">

<!-- scope -->
  <command name="begin">
    <keyword>[</keyword>
  </command>
  
  <command name="end">
    <keyword>]</keyword>
  </command>

<!-- execution controllers -->
  <command name="while">
    <keyword>mentre</keyword>
  </command>
  
  <command name="if">
    <keyword>se</keyword>
  </command>
  
  <command name="else">
    <keyword>altrimenti</keyword>
  </command>
  
  <command name="for">
    <keyword>per</keyword>
  </command>
  
  <command name="to">
    <keyword>finoa</keyword>
  </command>
  
  <command name="return">
    <keyword>restituisci</keyword>
  </command>
  
  <command name="break">
    <keyword>interrompi</keyword>
  </command>
  
  <command name="foreach">
    <keyword>perogni</keyword>
  </command>
  
  <command name="in">
    <keyword>in</keyword>
  </command>

  <command name="do">
    <keyword>fai</keyword>
  </command>
  
  <command name="repeat">
    <keyword>ripeti</keyword>
    <alias>rpt</alias>
  </command>

  <command name="wait">
    <keyword>attendi</keyword>
  </command>

<!-- boolean operators -->  
  <command name="and">
    <keyword>e</keyword>
  </command>
  
  <command name="or">
    <keyword>o</keyword>
  </command>
  
  <command name="not">
    <keyword>non</keyword>
  </command>
  
  
<!-- the meta command --> 
  <command name="learn">
    <keyword>impara</keyword>
  </command>

  
