<sect2 id="preferences-project-wizard-catman">
<title
>Página 2</title>

<screenshot>
<screeninfo
>Página 2 do Assistente de Projetos</screeninfo>
<mediaobject>
<imageobject>
<imagedata fileref="pref_wizard_page2.png" format="PNG"/>
