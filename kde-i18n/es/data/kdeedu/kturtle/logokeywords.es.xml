<?xml version="1.0"?>
<!DOCTYPE logokeywords>

<logokeywords lang="es" ver="0.01">

<!-- scope -->
  <command name="begin">
    <keyword>[</keyword>
  </command>
  
  <command name="end">
    <keyword>]</keyword>
  </command>

<!-- execution controllers -->
  <command name="while">
    <keyword>mientras</keyword>
  </command>
  
  <command name="if">
    <keyword>si</keyword>
  </command>
  
  <command name="else">
    <keyword>sino</keyword>
  </command>
  
  <command name="for">
    <keyword>para</keyword>
  </command>
  
  <command name="to">
    <keyword>a</keyword>
  </command>
  
  <command name="return">
    <keyword>devolver</keyword>
  </command>
  
  <command name="break">
    <keyword>romper</keyword>
  </command>
  
  <command name="foreach">
    <keyword>paratodo</keyword>
  </command>
  
  <command name="in">
    <keyword>en</keyword>
  </command>

  <command name="do">
    <keyword>hacer</keyword>
  </command>
  
  <command name="repeat">
    <keyword>repetir</keyword>
    <alias>rpt</alias>
  </command>

  <command name="wait">
    <keyword>esperar</keyword>
  </command>

<!-- boolean operators -->  
  <command name="and">
    <keyword>yy</keyword>
  </command>
  
  <command name="or">
    <keyword>oo</keyword>
  </command>
  
  <command name="not">
    <keyword>no</keyword>
  </command>
  
  
<!-- the meta command --> 
  <command name="learn">
    <keyword>aprender</keyword>
  </command>

  
<!-- normal keywords -->
  <command name="run">
    <keyword>ejecutar</keyword>
  </command>
  
  <command name="clear">
    <keyword>limpiar</keyword>
    <alias>lmp</alias>
  </command>
 
  <command name="go">
    <keyword>ir</keyword>
  </command>
 
  <command name="gox">
    <keyword>irx</keyword>
    <alias>ix</alias>
  </command>
 
  <command name="goy">
    <keyword>iry</keyword>
    <alias>iy</alias>
  </command>
 
  <command name="forward">
    <keyword>avanzar</keyword>
    <alias>avz</alias>
  </command>
  
  <command name="backward">
    <keyword>retroceder</keyword>
    <alias>rtd</alias>
  </command>

  <command name="direction">
    <keyword>dirección</keyword>
    <alias>dir</alias>
  </command>
  
  <command name="turnleft">
    <keyword>izquierda</keyword>
    <alias>izq</alias>
  </command>

  <command name="turnright">
    <keyword>derecha</keyword>
    <alias>dch</alias>
  </command>

  <command name="center">
    <keyword>centro</keyword>
  </command>
  
  <command name="setpenwidth">
    <keyword>grosorpluma</keyword>
    <alias>apl</alias>
  </command>
  
  <command name="penup">
    <keyword>levantarpluma</keyword>
    <alias>lpl</alias>
  </command>

  <command name="pendown">
    <keyword>bajarpluma</keyword>
    <alias>bpl</alias>
  </command>
  
  <command name="setfgcolor">
    <keyword>colorpluma</keyword>
    <alias>cpl</alias>
  </command>
  
  <command name="setbgcolor">
    <keyword>colorlienzo</keyword>
    <alias>cad</alias>
  </command>
   
  <command name="resizecanvas">
    <keyword>tamañolienzo</keyword>
    <alias>tad</alias>
  </command>

  <command name="spriteshow">
    <keyword>mostrartortuga</keyword>
    <alias>mt</alias>
  </command>
  
  <command name="spritehide">
    <keyword>ocultartortuga</keyword>
    <alias>ot</alias>
  </command>

  <command name="spritepress">
    <keyword>presionar</keyword>
    <alias>prs</alias>
  </command>

  <command name="spritechange">
    <keyword>cambiar</keyword>
    <alias>cbr</alias>
  </command>
  
  <command name="message">
    <keyword>mensaje</keyword>
  </command>
  
  <command name="inputwindow">
    <keyword>pregunta</keyword>
  </command>
  
  <command name="print">
    <keyword>escribir</keyword>
  </command>

  <command name="fonttype">
    <keyword>tipofuente</keyword>
  </command>
  
  <command name="fontsize">
    <keyword>tamañofuente</keyword>
  </command>
  
  <command name="random">
    <keyword>aleatorio</keyword>
  </command>
  
  <command name="wrapon">
    <keyword>envolver</keyword>
  </command>
  
  <command name="wrapoff">
    <keyword>desenvolver</keyword>
  </command>
  
  <command name="reset">
    <keyword>restaurar</keyword>
  </command>

</logokeywords>
